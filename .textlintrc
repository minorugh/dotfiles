 {
  "plugins": {
    "@textlint/markdown": true
  },
  "filters": {
    "allowlist": {
      "allow": [
        "ignored-word",
        "/\\d{4}-\\d{2}-\\d{2}/",
        "/===IGNORE===[\\s\\S]*?===\/IGNORE===/m",
      ]
    }
  },
"rules": {
        "preset-ja-technical-writing": {
            "ja-no-mixed-period": false, // 「。」のつけ忘れのチェックを除外
	    "no-exclamation-question-mark": false, // 「？」のチェックを除外
	    "ja-no-weak-phrase": false, // 弱い日本語表現のチェックを除外
        },
       "preset-ja-spacing": true,
       "no-mixed-zenkaku-and-hankaku-alphabet": true,
       // "ja-hiragana-fukushi": true, // install できないみたい
       // "ja-hiragana-keishikimeishi": true, // install できないみたい
       // "ja-hiragana-hojodoushi": true, // install できないみたい
       "@textlint-ja/textlint-rule-no-insert-dropping-sa": true,
       "prefer-tari-tari": true,
       "@textlint-ja/no-synonyms": true,
       "ja-no-orthographic-variants": true,
       "ja-no-inappropriate-words": true,
   }
}
