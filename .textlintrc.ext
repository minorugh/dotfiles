{
  "plugins": {
    "@textlint/markdown": true
  },
  "filters": {
    "allowlist": {
      "allow": [
        "ignored-word",
        "/\\d{4}-\\d{2}-\\d{2}/",
        "/===IGNORE===[\\s\\S]*?===\/IGNORE===/m",
	"自動販売機販売計画",
	"阪神淡路大震災",
	"東京特許許可局"
      ]
    }
  },
  "rules": {
        "@textlint-ja/textlint-rule-no-dropping-i": true,
        "@textlint-ja/textlint-rule-no-filler": false,
        "@textlint-ja/textlint-rule-no-insert-dropping-sa": false,
        "@textlint-ja/textlint-rule-no-insert-re": false,
        "@textlint-ja/no-synonyms": false,
        "ja-joyo-or-jinmeiyo-kanji": false,
        "ja-kyoiku-kanji": false,
        "ja-no-abusage": true,
        "ja-no-inappropriate-words": false,
        "ja-no-mixed-period": false,
        "ja-no-orthographic-variants": false,
        "ja-no-redundant-expression": false,	
        "ja-no-successive-word": false,
        "ja-no-weak-phrase": false,
        "ja-unnatural-alphabet": false,
        "max-kanji-continuous-len": false,
        "max-ten": false,
        "no-double-negative-ja": false,
        "no-doubled-conjunctive-particle-ga": false,
        "no-doubled-joshi": true,
        "no-dropping-the-ra": true,
        "no-mix-dearu-desumasu": true,
        "no-mixed-zenkaku-and-hankaku-alphabet": false,
        "no-nfd": false,
        "prefer-tari-tari": true,
        "preset-ja-spacing": true,
        "preset-ja-technical-writing": true,
        "preset-japanese": true,
        "preset-jtf-style": false
  }
}
